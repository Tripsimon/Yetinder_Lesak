{% extends 'base.html.twig' %}

{% block title %}
  Hello RatingsController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
  </style>

  <div class="container">
    <h2 class="text-center">Seznam hodnocení Yetíků</h2>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Yeti ID</th>
          <th>Hodnocení</th>
          <th>Čas</th>
        </tr>
      </thead>
      <tbody>
        {% for rating in ratings %}
          <tr>
            <td>{{ rating.id }}</td>
            <td>{{ rating.yetiName }}</td>
            <td>
              {% if rating.rating %}
                +1
              {% else %}
                -1
              {% endif %}
            </td>
            <td>{{ rating.timestamp|date('d.m.Y H:i:s') }}</td>
          </tr>
        {% else %}
          <tr>
            <td colspan="4">Žádná hodnocení zatím nejsou.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="btn-group text-center" role="group" aria-label="Basic example">
      <a type="button" href="{{ path('app_ratings', { timeSpan: "unlimited"}) }}" class="btn btn-primary">Neomezeno</a>
      <a type="button" href="{{ path('app_ratings', { timeSpan: "month"}) }}" class="btn btn-primary">Měsíc</a>
      <a type="button" href="{{ path('app_ratings', { timeSpan: "week"}) }}" class="btn btn-primary">Týden</a>
    </div>
  </div>
{% endblock %}
