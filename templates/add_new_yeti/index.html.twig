{% extends 'base.html.twig' %}

{% block title %}
  Přidat Yetiho
{% endblock %}

{% block body %}
  <div class="container text-center">
    <h1>Přidat nového Yetiho</h1>
    {{ form_start(form) }}
    <div class="row">
      <div class="col-6 col-md-4">{{ form_row(form.name) }}</div>

      <div class="col-6 col-md-4">{{ form_row(form.placeOfStay) }}</div>

      <div class="col-6 col-md-4">{{ form_row(form.age) }}</div>

      <div class="col-6 col-md-4">{{ form_row(form.gender) }}</div>

      <div class="col-6 col-md-4">{{ form_row(form.weight) }}</div>

      <div class="col-6 col-md-4">{{ form_row(form.height) }}</div>
    </div>
    <div class="flex mt-4">{{ form_row(form.submit) }}</div>
    <div class="">{{ form_end(form, {'render_rest': false}) }}</div>
  </div>
{% endblock %}
